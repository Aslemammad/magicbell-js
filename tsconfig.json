{
  "extends": "./tsconfig.build.json",
  "include": ["packages", "scripts", "types"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@magicbell/core": ["packages/core/src"],
      "@magicbell/embeddable": ["packages/embeddable/src"],
      "@magicbell/magicbell-react": ["packages/react/src"],
      "@magicbell/react-headless": ["packages/react-headless/src"]
    },
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "strict": false,
    "noImplicitReturns": false,
    "useDefineForClassFields": true,
    "experimentalDecorators": true
  }
}
